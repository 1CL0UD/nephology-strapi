{
  "kind": "collectionType",
  "collectionName": "novels",
  "info": {
    "singularName": "novel",
    "pluralName": "novels",
    "displayName": "Novel",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 1
    },
    "Synopsis": {
      "type": "blocks",
      "required": true
    },
    "chapters": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::chapter.chapter",
      "mappedBy": "novel"
    },
    "genres": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::genre.genre",
      "mappedBy": "novels"
    },
    "Cover": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true
    }
  }
}
